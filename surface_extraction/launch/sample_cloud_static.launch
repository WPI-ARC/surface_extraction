<launch>
    <!-- Static transform from world frame to point cloud frame -->
    <node pkg="tf" type="static_transform_publisher" name="tf_broadcaster" args="0 0 1.1  0 -0.05 1.6 /world /base_link 100">
        <remap from="cloud_pcd" to="input_cloud" />
    </node>
    <!-- Pointcloud publisher -->
    <node pkg="pcl_ros" type="pcd_to_pointcloud" name="input_publisher" args="$(find pcl_surfaces)/data/shadwell_demo_area_binary.pcd 1" />

    <include unless="$(arg cloud_only)" file="$(find surface_extraction)/launch/surface_extraction.launch" />
</launch>
